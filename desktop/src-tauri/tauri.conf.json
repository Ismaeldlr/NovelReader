{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "NovelReader",
  "version": "0.1.0",
  "identifier": "NovelReader",

  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },

  "app": {
    "windows": [{ "title": "NovelReader", "width": 1000, "height": 700 }],
    "security": { "capabilities": ["default"] }
  },

  "bundle": {
    "active": true,
    "targets": ["nsis"],                    
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "nsis": {
        "installMode": "both",
        "displayLanguageSelector": false    
      }
    }
  }
}
